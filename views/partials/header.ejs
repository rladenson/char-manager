<div id="header">
    <a href="/">
        <i class="fa-solid fa-house"></i> <span>Character Manager</span>
    </a>
    <div id="mini-links">
        <% if(currentUser) { %>
            <a href="/characters">Your Characters</a>
        <% } %>
    </div>
    <div class="spacer"></div>
    <i
        class="fa-solid fa-bars"
        onclick="if(document.getElementById('hamburger-menu').style.display !== 'block') {document.getElementById('hamburger-menu').style.display = 'block'} else {document.getElementById('hamburger-menu').style.display = 'none'}"
    ></i>
</div>
<div id="hamburger-menu">
    <ul>
        <% if(currentUser) { %>
            <li><a href="/users">User Page</a></li>
            <li><a href="/characters">Your Characters</a></li>
            <li><a href="/characters/new">New Character</a></li>
            <li><a href="/sessions/logout">Logout</a></li>
        <% } else { %>
            <li><a href="/sessions/new">Login</a></li>
            <li><a href="/users/new">Create Account</a></li>
        <% } %>
    </ul>
</div>
