<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head.ejs") %>
    </head>
    <body>
        <%- include("../partials/header.ejs") %>
        <main>
            <h1>Edit <%=character.name%></h1>
            <p>
                <a href="/character/<%=character.id%>">
                    <button>Back</button>
                </a>
            </p>
            <form 
                action="/character/<%=character.id%>?_method=PUT" method="POST"
            >
                <table>
                    <tr>
                        <td>Name:</td>
                        <td>
                            <input
                                type="text"
                                name="name"
                                value="<%=character.name%>"
                            />
                        </td>
                    </tr>
                    <tr>
                        <td>Image:</td>
                        <td>
                            <input
                                type="text"
                                name="image"
                                value="<%=character.image%>"
                            />
                        </td>
                    </tr>
                    <tr>
                        <td>Age:</td>
                        <td>
                            <input
                                type="number"
                                name="age"
                                value="<%=character.age%>"
                            />
                        </td>
                    </tr>
                    <tr>
                        <td>Career:</td>
                        <td>
                            <input
                                type="text"
                                name="career"
                                value="<%=character.career%>"
                            />
                        </td>
                    </tr>
                    <tr>
                        <td>Species:</td>
                        <td>
                            <input
                                type="text"
                                name="species"
                                value="<%=character.species%>"
                            />
                        </td>
                    </tr>
                    <tr>
                        <td>Quote:</td>
                        <td>
                            <textarea name="quote"><%=character.quote%></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td>Bio:</td>
                        <td><textarea name="biography"><%=character.biography%></textarea></td>
                    </tr>
                    <tr>
                        <td>Personality:</td>
                        <td><textarea name="personality"><%=character.personality%></textarea></td>
                    </tr>
                    <tr>
                        <td>
                            <span title="Seperate with commas">
                                Magical Abilities:
                            </span>
                        </td>
                        <td><textarea name="magicalAbilities"><%=character.magicalAbilities.join(", ")%></textarea></td>
                    </tr>
                </table>
                <input type="submit" value="Submit" />
            </form>
        </main>
    </body>
</html>
